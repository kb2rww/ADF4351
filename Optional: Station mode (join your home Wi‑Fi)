WiFi.mode(WIFI_STA);
WiFi.begin("YourSSID", "YourPass");
while (WiFi.status() != WL_CONNECTED) { delay(250); Serial.print("."); }
IPAddress ip = WiFi.localIP();
Serial.print("Connected. IP: "); Serial.println(ip);
