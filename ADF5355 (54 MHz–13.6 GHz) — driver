// 3.000 GHz profile (FILL WITH ADI EXPORT)
const uint32_t ADF5355_3GHz[] = {
  // 0x????????, 0x????????, ...
};

// Usage
void use_ADF5355_1GHz() { ADF5355_program(ADF5355_1GHz, sizeof(ADF5355_1GHz)/4); }
void use_ADF5355_3GHz() { ADF5355_program(ADF5355_3GHz, sizeof(ADF5355_3GHz)/4); }
